snippet beg "begin{} / end{}"
\\begin{$1}
  $0
\\end{$1}
endsnippet

snippet nc "\newcommand"
\\newcommand{\\${1:cmd}}[${2:opt}]{${3:realcmd}} ${0}
endsnippet

snippet up "\usepackage"
\\usepackage[${1:options}]{${2:package}} ${0}
endsnippet

snippet "" "Quotes."
\`\`${1}'' ${0}
endsnippet

snippet eqn "begin{equation}"
\\begin{equation}
  $1
\\end{equation}
endsnippet

snippet sum
\sum_{$1}^{$2} $0
endsnippet

snippet int
\displaystyle\int_{$1}^{$2}\ \dd $3\ $0
endsnippet

