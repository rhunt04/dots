#endsnippet

snippet tp "To power of"
^{$1}$0
endsnippet

snippet frac "Fraction"
\\frac{$1}{$2}$0
endsnippet

priority 10
snippet "bar" "bar"
\overline{$1}$0
endsnippet

priority 100
snippet "([a-zA-Z])bar" "bar"
\overline{`!p snip.rv=match.group(1)`}
endsnippet

priority 10
snippet "hat" "hat"
\hat{$1}$0
endsnippet

priority 100
snippet "([a-zA-Z])hat" "hat"
\hat{`!p snip.rv=match.group(1)`}
endsnippet

snippet sidefig
\begin{figure}[H]

\floatbox[{\capbeside\thisfloatsetup{capbesideposition={left, center},capbesidewidth=0.5\textwidth}}]{figure}[\FBwidth]
{
  \caption{$1}
  \label{fig:$2}
}
{
  \includegraphics[width=0.5\textwidth]{$0}
}
\end{figure}
endsnippet

snippet fig
\begin{figure}[ht!]
  \centering
  \includegraphics[width=\linewidth]{$1}
  \caption{$2}%
\label{fig:$3}
\end{figure}

$0
endsnippet

snippet sec "Section"
\section{$1\label{sec:$2}}
endsnippet

snippet sub "Subsection"
\subsection{$1\label{sub:$2}}
endsnippet

snippet subsub "Subsubsection"
\subsubsection{$1\label{$2}}
endsnippet
